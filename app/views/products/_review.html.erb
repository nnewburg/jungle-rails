<tr>
  <td>
    <p>Review by: <%= findUser(description.user_id) %></p>
    <span>Review:</span>
    <p style="border: 1px black solid;"> <%= description.description %></p>
    <br>
    <p>Rated this product: <%= description.rating %>/5</p>
    <% if current_user.id == description.user_id %>
    <%= form_for :review, url: "/products/#{description.product_id}/reviews/destroy" do |f| %>
  <p>
     <%= f.hidden_field :user_id, value: description.user_id %>
  </p>
    <%= f.hidden_field :product_id, value: description.product_id %>
    <%= f.hidden_field :id, value: description.id %>

  <p>
    <%= f.submit "Delete Review" %>
  </p>
  <% end %>
  <% end %>
  </td>
</tr>
